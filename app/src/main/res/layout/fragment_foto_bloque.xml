<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="orgasmo.hellfish.gpsudabol.FotoBloqueA"
    android:background="@drawable/inicio2">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:text="A - 1"
        android:layout_height="50dp"
        android:id="@+id/a1"
        android:background="@drawable/button"
        android:layout_width="90dp"
        android:onClick="onClick (FotoBloqueA)"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="@+id/textView12"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:text="A - 2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/a2"
        android:background="@drawable/button"
        android:onClick="onClick (FotoBloqueA)"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="27dp"
        app:layout_constraintRight_toRightOf="@+id/imageView12"
        app:layout_constraintBaseline_toBaselineOf="@+id/a1"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView12" />

    <TextView
        android:text="Seleccione Aula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="177dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/pasa"
        android:id="@+id/imageView12"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="34dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
